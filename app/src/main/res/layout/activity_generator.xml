<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#BFFF80"
    tools:context="tgo1014.projectx.GeneratorActivity">

    <LinearLayout
        android:id="@+id/llInputFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:visibility="visible"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextoQR"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_background"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:hint="Name"
            android:textSize="18sp"
            android:textAllCaps="false" />
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_background"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:hint="Address"
            android:textSize="18sp"
            android:textAllCaps="false" />
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_background"
            android:inputType="textEmailAddress"
            android:fontFamily="sans-serif"
            android:hint="Email"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textAllCaps="false" />
        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_background"
            android:inputType="number"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:hint="Phone Number"
            android:textSize="18sp"
            android:textAllCaps="false" />
        <EditText
            android:id="@+id/etFBURL"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_background"
            android:inputType="textUri"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:hint="Facebook URL"
            android:textSize="18sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnGerarQR"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Create" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llQRContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:orientation="horizontal"
            android:background="@drawable/qrframe"
            android:id="@+id/qrFrame"
            >
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="187dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentTop="true" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnGenAgain"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Edit Information"
                />
            <Button
                android:id="@+id/btnSaveQRCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Export"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
