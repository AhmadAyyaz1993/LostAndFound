<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#BFFF80"
    tools:context="lost_and_found.projectx.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/logo"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGerarQR"
        android:layout_marginTop="36dp"
        android:background="@drawable/textview_background"
        android:text="@string/txtGerarQR" />

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLerQR"
        android:background="@drawable/textview_background"
            android:layout_marginTop="8dp"
            android:text="@string/txtLerQR" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/textview_background"
        android:id="@+id/btnScannedHistory"
        android:text="Scanned History" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGenQRHistory"
        android:layout_marginTop="8dp"
        android:background="@drawable/textview_background"
        android:text="QR Codes History" />
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtSobre"
            android:ems="10"
            android:id="@+id/txtSobre"
            android:textSize="14sp"
            android:gravity="center_vertical|center_horizontal" />

</LinearLayout>
